<script>
  // Get the modal
  var modal = document.getElementById("myModal");

  // Get the images and insert them inside the modal
  var images = document.querySelectorAll(".thumbnail");
  var modalImg = document.getElementById("img01") as HTMLImageElement; // กำหนดประเภทเป็น HTMLImageElement
  var captionText = document.getElementById("caption");

  // ตรวจสอบให้ `image` เป็น HTMLImageElement
  images.forEach(function (image) {
    (image as HTMLImageElement).onclick = function () {
      modal.style.display = "block";
      modalImg.src = (this as HTMLImageElement).src;
      captionText.innerHTML = (this as HTMLImageElement).alt;
    };
  });

  // Get the <span> element to close the modal
  var span = document.getElementsByClassName("close")[0] as HTMLSpanElement; // ใช้ type assertion เพื่อบอกว่าเป็น HTMLSpanElement

  span.onclick = function () {
    modal.style.display = "none";
  };
</script>

<style is:global>
  .image-gallery {
    display: grid; /* ใช้ grid layout */
    grid-template-columns: repeat(
      auto-fill,
      minmax(200px, 1fr)
    ); /* ทำให้คอลัมน์มีขนาดอัตโนมัติ */
    gap: 10px; /* ช่องว่างระหว่างภาพ */
  }

  .img-container {
    height: 300px; /* กำหนดความสูงให้เป็นแนวตั้ง */
    overflow: hidden; /* ซ่อนส่วนที่เกินกรอบ */
    border: 2px solid #ccc; /* กรอบรอบภาพ */
    border-radius: 10px; /* ทำมุมโค้งให้กับกรอบ */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* เงารอบๆ กรอบ */
  }

  .thumbnail {
    width: 100%;
    height: 100%;
    object-fit: cover; /* ทำให้ภาพยืดเต็มกรอบโดยไม่เสียสัดส่วน */
    border-radius: 10px;
    transition: all 0.3s ease;
  }

  .thumbnail:hover {
    transform: scale(1.05); /* ขยายภาพเมื่อเอาเมาส์ไปวาง */
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2); /* เพิ่มเงาเมื่อ hover */
  }

  .shiny-sec {
    background: linear-gradient(135deg, #a476ff 25%, #eee5ff 50%, #a476ff 75%);
    background-size: 400% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    animation: shine 3s linear infinite;
  }

  @keyframes shine {
    0% {
      background-position: 100% 50%;
    }
    30%,
    70% {
      background-position: 0% 50%;
    }
  }

  .modal {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 1; /* Sit on top */
    padding-top: 100px; /* Location of the box */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgb(0, 0, 0); /* Fallback color */
    background-color: rgba(0, 0, 0, 0.9); /* Black w/ opacity */
  }

  /* Modal Content (image) */
  .modal-content {
    margin: auto;
    display: block;
    width: 80%;
    max-width: 700px;
  }

  /* Caption of Modal Image */
  #caption {
    margin: auto;
    display: block;
    width: 80%;
    max-width: 700px;
    text-align: center;
    color: #ccc;
    padding: 10px 0;
    height: 150px;
  }

  /* Add Animation */
  .modal-content,
  #caption {
    -webkit-animation-name: zoom;
    -webkit-animation-duration: 0.6s;
    animation-name: zoom;
    animation-duration: 0.6s;
  }

  @-webkit-keyframes zoom {
    from {
      -webkit-transform: scale(0);
    }
    to {
      -webkit-transform: scale(1);
    }
  }

  @keyframes zoom {
    from {
      transform: scale(0);
    }
    to {
      transform: scale(1);
    }
  }

  /* The Close Button */
  .close {
    position: absolute;
    top: 15px;
    right: 35px;
    color: #f1f1f1;
    font-size: 40px;
    font-weight: bold;
    transition: 0.3s;
  }

  .close:hover,
  .close:focus {
    color: #bbb;
    text-decoration: none;
    cursor: pointer;
  }

  /* 100% Image Width on Smaller Screens */
  @media only screen and (max-width: 700px) {
    .modal-content {
      width: 100%;
    }
  }
</style>
